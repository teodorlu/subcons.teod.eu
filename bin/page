#!/usr/bin/env bash
set -euo pipefail

FOLDER=$(git rev-parse --show-toplevel)/"$1"
mkdir -p "$FOLDER"

if test -f "$FOLDER/index.edn"; then
    :
    # index.edn exists - do nothing
else
    # Create it.
    cat <<EOF > "$FOLDER/index.edn"
^{:eu.teod.subcons/builder :eu.teod.subcons.builder/hiccup-html}
[:html
 [:head
  [:meta {:charset "utf-8"}]
  [:title "Â·"]
  [:link {:rel "stylesheet" :href "porta2.css"}]
  [:link {:rel "icon" :type "image/svg+xml" :href "/solarpunk1.svg"}]
  [:meta {:name "viewport" :content "width=device-width, initial-scale=1"}]]
 [:body
  ]]
EOF
fi
